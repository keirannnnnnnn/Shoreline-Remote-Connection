<Window x:Class="VNCClient.Views.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Settings" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SurfaceBrush}"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Connection Settings" 
                       FontSize="24" 
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Configure your VNC connection details" 
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Form -->
        <Border Grid.Row="1" 
                Style="{StaticResource ModernCardStyle}"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Display Name -->
                <TextBlock Grid.Row="0" 
                           Text="Display Name" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" 
                         Name="DisplayNameTextBox"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,16"/>
                
                <!-- IP Address -->
                <TextBlock Grid.Row="2" 
                           Text="IP Address" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <TextBox Grid.Row="3" 
                         Name="IpAddressTextBox"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,16"/>
                
                <!-- Port -->
                <TextBlock Grid.Row="4" 
                           Text="Port" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <TextBox Grid.Row="5" 
                         Name="PortTextBox"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,16"/>
                
                <!-- Password -->
                <TextBlock Grid.Row="6" 
                           Text="Password (Optional)" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <PasswordBox Grid.Row="7" 
                             Name="PasswordBox"
                             Padding="12,8"
                             FontSize="14"
                             BorderThickness="1"
                             BorderBrush="{StaticResource BorderBrush}"
                             Background="White">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                        Padding="{TemplateBinding Padding}"
                                                        VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0"/>
            <Button Content="Save" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>